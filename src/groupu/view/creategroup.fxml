            <TextField fx:id="txtDescription" prefHeight="139.0" prefWidth="398.0" promptText="Enter a short description (200 char). " GridPane.columnIndex="1" GridPane.rowIndex="1" />
           
         </children>
      </GridPane>
   </children>
